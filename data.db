CREATE TABLE users (
    user_id INTEGER PRIMARY KEY,  -- Discord user ID
    username TEXT NOT NULL,       -- Discord username
    start_date TEXT NOT NULL,     -- Subscription start date
    end_date TEXT NOT NULL,       -- Subscription end date
    duration INTEGER NOT NULL,    -- Duration in months
    cost REAL NOT NULL,           -- Subscription cost
    paid BOOLEAN DEFAULT 0,        -- Payment status
    reminded BOOLEAN DEFAULT 0    -- Reminder sent
);

CREATE TABLE IF NOT EXISTS plan_cost (
    id INTEGER PRIMARY KEY,
    monthly_cost REAL NOT NULL
    effective_date TEXT NOT NULL
);

